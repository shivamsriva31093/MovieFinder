<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/cardview_dark_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="@android:statusBarColor">@color/status_bar_light_grey</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:text">"CINE"</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar.RippleEffectCustom">
        <item name="android:colorControlHighlight">@android:color/darker_gray</item>
    </style>


    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="viewPagerTabStrip">
        <item name="android:textColor">@color/colorPrimaryMid</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CardViewTheme">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
    </style>

    <style name="RecentMoviesCardViewTheme" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/card_background</item>
    </style>
    <style name="RecentMoviesCardViewTheme2" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/card_background</item>
    </style>

    <style name="CreditMoviesCardViewTheme2" parent="CardView">
        <item name="cardCornerRadius">11dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/card_background</item>
    </style>

    <style name="RatingMoviesCardViewTheme2" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/card_background</item>
    </style>

    <style name="CreditMoviesCardViewTheme1" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/card_background</item>
    </style>
    <style name="RecentMoviesCardViewTheme1" parent="CardView">
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/card_background</item>
    </style>

    <!-- Empty views -->
    <style name="EmptyText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_disabled</item>
    </style>

    <!-- Body content -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Body1Text">
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_1_spacing</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Body2Text">
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_1_spacing</item>
    </style>

    <style name="TextLabel">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TextLabel2">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">@color/colorTransparent</item>
        <item name="colorControlHighlight">@color/colorTransparent</item>
    </style>

    <style name="MyCubeButtonPin">
        <item name="android:background">@drawable/selector_search_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="customTabStyle">
        <item name="android:background">@drawable/custom_tab_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryMid</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
