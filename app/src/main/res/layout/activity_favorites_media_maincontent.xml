    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:elevation="0dp"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <!--#01a2b9#ecf0f1-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_scrollFlags="scroll|enterAlways|snap|scroll|enterAlways|snap"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <task.application.com.moviefinder.ui.utility.widgets.GeneralTextView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="CINEFY"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="normal"
                app:font="OpenSans"
                app:layout_scrollFlags="scroll|enterAlways|scroll|enterAlways"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintRight_toLeftOf="@+id/guideline5"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageView
                android:id="@+id/nav_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ripple_effect_button"
                android:clickable="true"
                android:padding="5dp"
                app:srcCompat="@drawable/menu"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="0dp"
                app:layout_constraintTop_toTopOf="@+id/endbar"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/endbar"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toLeftOf="@+id/endbar"
                android:layout_marginRight="16dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/endbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="80dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:civ_fill_color="@color/body_text_2_inverse"
                android:src="#f5f7f7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ripple_effect_button"
                android:clickable="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/endbar"
                app:layout_constraintLeft_toLeftOf="@+id/endbar"
                app:layout_constraintRight_toRightOf="@+id/endbar"
                app:layout_constraintTop_toTopOf="@+id/endbar"
                app:srcCompat="@drawable/magnify" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline5"
                app:layout_constraintGuide_begin="113dp"
                android:orientation="vertical" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline6"
                app:layout_constraintGuide_begin="304dp"
                android:orientation="vertical" />


        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>
